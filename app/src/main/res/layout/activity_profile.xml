<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/txtTonyStarkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtTonyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries.com"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtTonyStarkName"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtTonyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 11 155555"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtTonyEmail"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgTonyStark"
        android:layout_margin="20dp"
        android:backgroundTint="#3f51b5"
        android:text="More Information"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#d50000"
        android:text="Exit App"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</RelativeLayout>